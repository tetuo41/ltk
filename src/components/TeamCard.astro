---
import type { Team, TeamRecord, TeamCardProps } from '@/types';

export interface Props extends TeamCardProps {}

const { team, coreRecord, nextRecord } = Astro.props;

// Calculate combined record
const combinedWins = (coreRecord?.wins || 0) + (nextRecord?.wins || 0);
const combinedLosses = (coreRecord?.losses || 0) + (nextRecord?.losses || 0);
const combinedWinRate = combinedWins + combinedLosses > 0 
  ? Math.round((combinedWins / (combinedWins + combinedLosses)) * 100) 
  : 0;
---

<article class="team-card" data-team={team.id} style={`--team-color: ${team.color}`}>
  <header class="team-header">
    <div class="team-title">
      <h3 class="team-name">{team.name}</h3>
      <span class="team-short-name">{team.shortName}</span>
    </div>
    
    <div class="team-record">
      <span class="record-text">
        <span class="wins">{combinedWins}</span>
        <span class="separator">-</span>
        <span class="losses">{combinedLosses}</span>
      </span>
      <span class="win-rate">{combinedWinRate}%</span>
    </div>
  </header>

  <div class="team-content">
    <!-- CORE Players Section -->
    <section class="roster-section core-section">
      <h4 class="section-title">
        <span class="section-icon">‚öîÔ∏è</span>
        COREÈÅ∏Êâã
        {coreRecord && (
          <span class="section-record">
            ({coreRecord.wins}-{coreRecord.losses})
          </span>
        )}
      </h4>
      
      <ul class="player-list" role="list">
        {team.core_players.map((player) => (
          <li class="player-item core-player">
            <div class="player-info">
              <span class="player-name">{player.name}</span>
              <span class="player-role" title={`„Éù„Ç∏„Ç∑„Éß„É≥: ${player.role}`}>
                {player.role}
              </span>
            </div>
            <span class="player-rank">{player.rank}</span>
          </li>
        ))}
      </ul>
    </section>

    <!-- NEXT Players Section -->
    <section class="roster-section next-section">
      <h4 class="section-title">
        <span class="section-icon">üåü</span>
        NEXTÈÅ∏Êâã
        {nextRecord && (
          <span class="section-record">
            ({nextRecord.wins}-{nextRecord.losses})
          </span>
        )}
      </h4>
      
      <ul class="player-list" role="list">
        {team.next_players.map((player) => (
          <li class="player-item next-player">
            <div class="player-info">
              <span class="player-name">{player.name}</span>
              <span class="player-role" title={`„Éù„Ç∏„Ç∑„Éß„É≥: ${player.role}`}>
                {player.role}
              </span>
            </div>
            <span class="player-rank">{player.rank}</span>
          </li>
        ))}
      </ul>
    </section>

    <!-- Coaches Section -->
    <section class="roster-section coaches-section">
      <h4 class="section-title">
        <span class="section-icon">üéØ</span>
        „Ç≥„Éº„ÉÅ
      </h4>
      
      <ul class="coach-list" role="list">
        {team.coaches.map((coach) => (
          <li class="coach-item">
            <span class="coach-name">{coach.name}</span>
            <span class="coach-role">{coach.role}</span>
          </li>
        ))}
      </ul>
    </section>
  </div>

  <div class="team-stats">
    <div class="stat-item">
      <span class="stat-label">Á∑èÂêàÊà¶Á∏æ</span>
      <span class="stat-value">{combinedWins}Âãù{combinedLosses}Êïó</span>
    </div>
    <div class="stat-item">
      <span class="stat-label">ÂãùÁéá</span>
      <span class="stat-value">{combinedWinRate}%</span>
    </div>
  </div>
</article>

<style>
  .team-card {
    background: rgba(12, 22, 44, 0.9);
    border: 2px solid var(--team-color);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
  }

  .team-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--team-color), transparent);
  }

  .team-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3),
                0 0 20px rgba(200, 155, 60, 0.1);
  }

  .team-header {
    display: flex;
    justify-content: space-between;
