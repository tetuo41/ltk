    font-weight: 600;
  }

  /* Team-specific styling */
  .team-card[data-team="precision"] {
    --team-color: var(--color-precision);
  }

  .team-card[data-team="domination"] {
    --team-color: var(--color-domination);
  }

  .team-card[data-team="sorcery"] {
    --team-color: var(--color-sorcery);
  }

  .team-card[data-team="resolve"] {
    --team-color: var(--color-resolve);
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .team-card {
      padding: var(--space-4);
    }

    .team-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-3);
    }

    .team-record {
      align-items: flex-start;
    }

    .team-stats {
      grid-template-columns: 1fr;
      gap: var(--space-2);
