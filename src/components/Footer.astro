<style>
  .footer {
    background: var(--color-surface-dark);
    border-top: 2px solid var(--color-primary);
    margin-top: var(--space-16);
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-5);
  }

  .footer-container:first-child {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-8);
    padding-top: var(--space-12);
    padding-bottom: var(--space-8);
  }

  .footer-section {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .section-title {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-text-light);
    margin: 0;
    padding-bottom: var(--space-2);
    border-bottom: 2px solid var(--color-primary);
    position: relative;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 40px;
    height: 2px;
    background: var(--color-secondary);
  }

  /* Tournament Info Section */
  .info-grid {
    display: grid;
    gap: var(--space-3);
  }

  .info-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .info-label {
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 500;
  }

  .info-value {
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    font-weight: 500;
  }

  /* Social Links Section */
  .social-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3);
    border-radius: var(--radius-lg);
    background: rgba(70, 55, 20, 0.3);
    border: 1px solid rgba(200, 155, 60, 0.2);
    color: var(--color-text);
    text-decoration: none;
    transition: all var(--transition-fast);
    position: relative;
    overflow: hidden;
  }

  .social-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(200, 155, 60, 0.1), transparent);
    transition: left var(--transition-normal);
  }

  .social-link:hover {
    background: rgba(70, 55, 20, 0.5);
    border-color: var(--color-primary);
    transform: translateX(4px);
    color: var(--color-text-light);
  }

  .social-link:hover::before {
    left: 100%;
  }

  .social-icon {
    font-size: var(--font-size-lg);
    width: 24px;
    display: flex;
    justify-content: center;
  }

  .social-label {
    font-weight: 500;
    flex: 1;
  }

  .external-icon {
    font-size: var(--font-size-sm);
    opacity: 0.7;
    transition: all var(--transition-fast);
  }

  .social-link:hover .external-icon {
    opacity: 1;
    transform: translate(2px, -2px);
  }

  /* Platform-specific styling */
  .social-link[data-platform="twitch"]:hover {
    border-color: #9146ff;
    background: rgba(145, 70, 255, 0.1);
  }

  .social-link[data-platform="youtube"]:hover {
    border-color: #ff0000;
    background: rgba(255, 0, 0, 0.1);
  }

  .social-link[data-platform="twitter"]:hover {
    border-color: #1da1f2;
    background: rgba(29, 161, 242, 0.1);
  }

  /* Stats Section */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
  }

  .stat-item {
    text-align: center;
    padding: var(--space-4);
    background: rgba(70, 55, 20, 0.3);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(200, 155, 60, 0.2);
    transition: all var(--transition-fast);
  }

  .stat-item:hover {
    background: rgba(70, 55, 20, 0.5);
    transform: translateY(-2px);
  }

  .stat-number {
    display: block;
    font-size: var(--font-size-3xl);
    font-weight: 700;
    color: var(--color-primary);
    line-height: 1;
    margin-bottom: var(--space-1);
  }

  .stat-label {
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 500;
  }

  /* Footer Bottom */
  .footer-bottom {
    background: var(--color-background);
    border-top: 1px solid var(--color-border);
  }

  .copyright-content {
    padding: var(--space-6) 0;
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .copyright-text {
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    margin: 0;
  }

  .copyright-text strong {
    color: var(--color-primary);
    font-weight: 600;
  }

  .legal-links {
    display: flex;
    justify-content: center;
    gap: var(--space-4);
  }

  .legal-note {
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
  }

  .site-info {
    display: flex;
    justify-content: center;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .site-note {
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
  }

  .build-info {
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
  }

  .tech-highlight {
    color: var(--color-primary);
    font-weight: 500;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .footer-container:first-child {
      grid-template-columns: 1fr;
      gap: var(--space-6);
      padding-top: var(--space-8);
      padding-bottom: var(--space-6);
    }

    .stats-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-2);
    }

    .stat-item {
      padding: var(--space-2);
    }

    .stat-number {
      font-size: var(--font-size-2xl);
    }

    .copyright-content {
      padding: var(--space-4) 0;
      gap: var(--space-2);
    }

    .site-info {
      flex-direction: column;
      gap: var(--space-1);
    }
  }

  @media (max-width: 480px) {
    .footer-container {
      padding: 0 var(--space-3);
    }

    .social-links {
      gap: var(--space-1);
    }

    .social-link {
      padding: var(--space-2);
      gap: var(--space-2);
    }

    .stats-grid {
      grid-template-columns: 1fr;
      gap: var(--space-2);
    }

    .legal-links,
    .site-info {
      flex-direction: column;
      gap: var(--space-1);
    }
  }
</style>